<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity"
    >

    <Button
        android:id="@+id/button_http_url_connection_get"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="HttpURLConnection GET" />

    <Button
        android:id="@+id/button_ok_http_get"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="OkHttpClient GET" />
    <Button
        android:id="@+id/button_pinned_ok_http"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="PinnedOkHttpClient" />
</LinearLayout>